#!perl
sub w{
    push@t,index$_,"x"
}
sub r($){
    $_[0]eq"-"and substr$_,shift@t,1,"-"
}
%m=(l,sub{w;s/x(.)/ox/;r$1},h,sub{w;s/(.)x/xo/;r$1},k,sub{w;s/(.)(.{$w})x/x$2o/s;r$1},j,sub{w;s/x(.{$w})(.)/o$1x/s;r$2});
undef$/;
$_=<>;
/.*/;
$w=length($&);
@t=index$_,"o";s/[hjkl].*(?=.)//s;
for$c(split'',$&){$m{$c}->()}
print
